<!DOCTYPE html>
<html lang="pl">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Wrocation - Panel Administracyjny</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
<body @if (ViewBag.BackgroundImage != null) { <text> style="background-image:url(@ViewBag.BackgroundImage); background-size: 100% auto;" </text>   }
      @if (ViewBag.BodyClass != null) { <text> class=@ViewBag.BodyClass</text>}>

    <nav class="navbar navbar-default navbar-fixed-top ">
        <div class="container">
            @Html.Partial("WspolneMenuPartial")
        </div>
    </nav>

    <div class="container">

        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        @RenderSection("featured", required: false)

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Wrocation</p>
                    @RenderSection("stopka", required: false)
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>
