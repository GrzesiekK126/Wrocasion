@model WRO.Web.Models.NewBundleViewModel
@{
    ViewBag.Title = "Nowy pakiet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<legend>Nowy pakiet</legend>

@using (Html.BeginForm("NewBundle", "Bundle", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class="form-group"}))
{

    <label>Nazwa</label>
    @Html.TextBoxFor(m => Model.Name, new { @class = "form-control", maxlength = "50" })
    @Html.ValidationMessageFor(m => Model.Name, null, new { @style = "color: red; display: block" })

    <button type="submit" class="btn btn-default">Utwórz</button>
}